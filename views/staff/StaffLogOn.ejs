<body>

    <script type="text/javascript">
        function addStaff(){

            var http = new XMLHttpRequest();
            var url = '/insertStaff';
            http.open('POST', url, true);

            var params = 'firstName='+document.getElementById('1stName').value+ '&Permission='+document.getElementById('Permission').value +'&Employee_Number='+ document.getElementById('Employee_Number').value +'&lastName='+document.getElementById('LastName').value +'&Email='+document.getElementById('InputEmail').value+'&birthDay='+document.getElementById('BirthDay').value + '&Password='+document.getElementById('InputPassword').value;

            http.setRequestHeader('Content-type', 'application/x-www-form-urlencoded');

            http.onreadystatechange = function () {
            if(http.readyState == 4 && http.status == 200) {
                    alert("You have been registered");
                }
                else{
                    alert("Something whent whrong and we were unable to register you");
                }
            };
            http.send(params);
        }
    </script>

    <form>

        <div class="col-md-6 container justify-content-center mt-4">
            <div class="form-group">
                <label for="1stName">First Name</label>
                <input class="form-control" id="1stName" name="firstName"  placeholder="Enter your first name">
            </div>

            <div class="form-group">
                <label for="LastName">Last Name</label>
                <input  class="form-control" id="LastName" name="lastName" placeholder="Enter your last name">
            </div>


            <div class="form-group">
                <label for="LastName">Perission</label>
                <input  class="form-control" id="Permission" name="Permission" placeholder="Enter employee permission">
            </div>

            
            <div class="form-group">
                <label for="EmployeeNumber">Enter Your Employee Number</label>
                <input  class="form-control" id="Employee_Number" name="Employee_Number" aria-describedby="EmployeeNDayHelp" placeholder="Enter employee Number">
            </div>


            <div class="form-group">
                <label for="BirthDay">Birth day</label>
                <input  class="form-control" id="BirthDay" name="birthDay" aria-describedby="BirthDayHelp" placeholder="YYYY-MM-DD">
                <small id="BirthDayHelp" class="form-text text-muted">The date format is (YYYY-MM-DD) and the "-" are expected</small>
            </div>



            <div class="form-group">
                <label for="InputEmail">Email address</label>
                <input type="email" class="form-control" id="InputEmail" name="Email" aria-describedby="emailHelp" placeholder="Enter email">
            </div>  



            <div class="form-group">
                <label for="InputPassword">Password</label>
                <input type="password" class="form-control" id="InputPassword" name="Password" placeholder="Password">
            </div>


            <button type="button" class="btn btn-primary" onclick="addStaff()">Create account</button>
        </div>

    </form>
</body>